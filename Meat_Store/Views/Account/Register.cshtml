@model RegisterViewModel

<main class="my-form">
    <div class="cotainer">
        <div class="row justify-content-center">
            <div class="col-md-8">
                    <div class="card">
                        <div class="card-header">Register</div>
                        <div class="card-body" >
                            <form asp-controller = "Account" asp-action="Register" method="post">
                                    <div class="form-group row mb-3">
                                        <div class="col-md-6">
                                            <input type="text" asp-for="@Model.Name" class="form-control">
                                        </div>
                                        <label asp-for="@Model.Name" class="col-md-4 col-form-label">Ім'я</label>
                                        <span asp-validation-for="@Model.Name"></span>
                                    </div>
                                    <div class="form-group row mb-3">
                                        <div class="col-md-6">
                                            <input type="text" asp-for="@Model.Surname" class="form-control">
                                        </div>
                                        <label asp-for="@Model.Surname" class="col-md-4 col-form-label">Прізвище</label>
                                        <span asp-validation-for="@Model.Surname"></span>
                                    </div>
                                    <div class="form-group row mb-3">
                                        <div class="col-md-6">
                                            <input type="email" asp-for="@Model.Email" class="form-control">
                                        </div>
                                        <label asp-for="@Model.Email" class="col-md-4 col-form-label">Email</label>
                                        <span asp-validation-for="@Model.Email"></span>
                                    </div>
                                    <div class="form-group row mb-3">
                                        <div class="col-md-6">
                                            <input type="tel" pattern="[0-9]{3}-[0-9]{3}-[0-9]{4}" asp-for="@Model.PhoneNumber" class="form-control">
                                        </div>
                                        <label asp-for="@Model.PhoneNumber" class="col-md-4 col-form-label">Номер телефону</label>
                                        <span asp-validation-for="@Model.PhoneNumber"></span>
                                    </div>
                                    <div class="form-group row mb-3">
                                        <div class="col-md-6">
                                            <input type="password" asp-for="@Model.Password" class="form-control">
                                        </div>
                                        <label asp-for="@Model.Password" class="col-md-4 col-form-label">Пароль</label>
                                        <span asp-validation-for="@Model.Password"></span>
                                    </div>
                                    <div class="form-group row mb-3">
                                        <div class="col-md-6">
                                            <input type="password" asp-for="@Model.PasswordConfirm" class="form-control">
                                        </div>
                                        <label asp-for="@Model.PasswordConfirm" class="col-md-4 col-form-label">Підтвердження паролю</label>
                                        <span asp-validation-for="@Model.PasswordConfirm"></span>
                                    </div>
                                    <div class="col-md-6 offset-md-4">
                                        <button type="submit" class="btn btn-primary">
                                        Register
                                        </button>
                                    </div>
                            </form>
                        </div>
                    </div>
            </div>
        </div>
    </div>

</main>