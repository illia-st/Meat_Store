@model LoginViewModel

<main class="my-form">
    <div class="cotainer">
        <div class="row justify-content-center">
            <div class="col-md-8">
                    <div class="card">
                        <div class="card-header">Login</div>
                        <div class="card-body" >
                            <form asp-controller = "Account" asp-action="Login" asp-route-returnUrl="@Model.ReturnUrl" method="post">
                                    <div class="form-group row mb-3">
                                        <div class="col-md-6">
                                            <input type="email" asp-for="@Model.Email" class="form-control">
                                        </div>
                                        <label asp-for="@Model.Email" class="col-md-4 col-form-label">Email</label>
                                        <span asp-validation-for="@Model.Email"></span>
                                    </div>
                                    <div class="form-group row mb-3">
                                        <div class="col-md-6">
                                            <input type="password" asp-for="@Model.Password" class="form-control">
                                        </div>
                                        <label asp-for="@Model.Password" class="col-md-4 col-form-label">Пароль</label>
                                        <span asp-validation-for="@Model.Password"></span>
                                    </div>
                                    <div>
                                        <label asp-for="RememberMe"></label><br />
                                        <input asp-for="RememberMe" />
                                    </div>
                                    <div class="col-md-6 offset-md-4">
                                        <button type="submit" class="btn btn-primary">Login</button>
                                    </div>
                            </form>
                        </div>
                </div>
            </div>
        </div>
    </div>
</main>

@section scripts{}