@model Category

<script type="text/javascript">
    function ShowError(error){
        alert(error);
    };
</script>
<main class="my-form">
    <div class="cotainer">
        <div class="row justify-content-center">
            <div class="col-md-8">
                    <div class="card">
                        <div class="card-header">Додавання категорії</div>
                        <div class="card-body" >
                            <form asp-controller = "Admin" asp-action="AddCategory" method="post">
                                    <div class="form-group row mb-3">
                                        <div class="col-md-6">
                                            <input type="text" asp-for="@Model.CategoryName" class="form-control">
                                        </div>
                                        <label asp-for="@Model.CategoryName" class="col-md-4 col-form-label">Назва категорії</label>
                                        <span asp-validation-for="@Model.CategoryName"></span>
                                    </div>
                                    <div class="form-group row mb-3">
                                        <div class="col-md-6">
                                            <input type="text" asp-for="@Model.Description" class="form-control">
                                        </div>
                                        <label asp-for="@Model.Description" class="col-md-4 col-form-label">Опис категорії</label>
                                        <span asp-validation-for="@Model.Description"></span>
                                    </div>
                                    <div class="form-group row mb-3">
                                        <div class="col-md-6">
                                            <input type="text" asp-for="@Model.Img" class="form-control">
                                        </div>
                                        <label asp-for="@Model.Img" class="col-md-4 col-form-label">Фото опис категорії</label>
                                        <span asp-validation-for="@Model.Img"></span>
                                    </div>
                                    <div class="col-md-6 offset-md-4">
                                        <button type="submit" class="btn btn-primary">Додати</button>
                                    </div>
                            </form>
                        </div>
                </div>
            </div>
        </div>
    </div>
</main>
@if (ViewBag.JavaScriptFunction != null)
{
    <script type="text/javascript">
        @Html.Raw(ViewBag.JavaScriptFunction)
    </script>
}

@section scripts{}

