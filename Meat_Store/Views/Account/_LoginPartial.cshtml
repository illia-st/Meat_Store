@model LoginViewModel
<div class="modal fade" id="login" tableindex="-1" aria-bs-labelledby="LoginLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div clas="modal-header">
                <div class="row">
                    <div class="col-5">
                        <h5 class="modal-title" id ="LoginLabel">Form</h5>
                    </div>
                    <div class="col-7" style="text-align:right;">
                        <button class="btn-close" data-bs-dismiss="modal" aria-bs-label="close"></button>
                    </div>
                </div>
            </div>
            <div class="modal-body">
                <form asp-controller="Account" asp-action="Login">
                    <div class="row mb-3">
                        <label asp-for="@Model.Email" class="col-sm-2 col-form-label">Email</label>
                        <div class="col-sm-10">
                            <input asp-for="@Model.Email" type="email" class="from-control">
                            <span asp-validation-for="@Model.Email" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="row mb-3">
                        <label asp-for="@Model.Password" class="col-sm-2 col-form-label">Пароль</label>
                        <div class="col-sm-10">
                            <input asp-for="@Model.Password" type="password" class="from-control">
                            <span asp-validation-for="@Model.Password" class="text-danger"></span>
                        </div>
                    </div>
                </form>
            </div>
            <div clas="modal-footer" style="text-align: right;">
                <button class="btn btn-secondary mb-2" data-bs-dismiss="modal">Закрити</button>
                <button class="btn btn-secondary mb-2 mr-2" data-bs-save="modal">Увійти</button>
            </div>
        </div>
    </div>
</div>
<script type="text/javascript">
    $(function () {
    var PlaceHolderElement = $('#PlaceHolderHere');

    $('button[id="login"]').click(function (event) {
        var url = $(this).data('url');
        $.get(url).done(function (data) {
            PlaceHolderElement.html(data);
            PlaceHolderElement.find('.modal').modal('show');
        })
    })
})
</script>